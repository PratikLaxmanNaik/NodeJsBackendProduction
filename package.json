        "cross-env": "^7.0.3",
        "dotenv-flow": "^4.1.0",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "mongoose": "^8.14.1",
        "source-map-support": "^0.5.21",
        "ts-migrate-mongoose": "^4.0.8",
        "winston": "^3.17.0",
        "winston-mongodb": "^6.0.0"
    }
