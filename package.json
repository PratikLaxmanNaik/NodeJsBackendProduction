{
    "name": "nodejsbackendproduction",
    "version": "1.0.0",
    "main": "src/server.js",
    "scripts": {
        "dist": "npx tsc",
        "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "prepare": "husky",
        "migrate:dev": "cross-env MIGRATE_MODE=development node script/migration.js",
        "migrate:prod": "cross-env MIGRATE_MODE=production node script/migration.js"
    },
    "keywords": [],
    "author": "pratik",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "description": "",
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@eslint/js": "^9.25.1",
        "@types/cors": "^2.8.17",
        "@types/eslint": "^9.6.1",
        "@types/express": "^5.0.1",
        "@types/node": "^22.15.2",
        "@types/source-map-support": "^0.5.10",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "nodemon": "^3.1.10",
        "prettier": "3.5.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.1"
    },
    "dependencies": {
        "colorette": "^2.0.20",
